<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- API 받은 시간, 받은 코드, 걸린 시간 노출 -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llBgStatus"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:background="#03A9F4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvResponseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            tools:text="23:24:00" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvResponseMs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            tools:text="500MS" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStatusCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{model.item.codeTxt}"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            tools:text="200" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llContents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fafafa"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <!-- 도메인 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBaseUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#222222"
            android:textSize="12dp"
            tools:text="til.qtzz.synology.me" />

        <!-- 요청한 패스 정보 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            tools:text="/hello" />

        <!-- 메소드 타입 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            tools:text="GET" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>